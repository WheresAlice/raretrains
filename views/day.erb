<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3><%= filter %> operators going through <%= station %> on <%= day %></h3>
        <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-condensed sortable-theme-bootstrap" data-sortable id="operators">
          <thead>
          <tr>
            <th class='sort-default'>Operator</th>
            <th>Count</th>
          </tr>
          </thead>
          <tbody>
          <% tocs.each do |toc| %>
              <tr>
                <td><a href="/<%= station_code %>/operator/<%= toc[0] %>" class="serviceslink"><%= toc[0] %></a></td>
                <td><%= toc[1] %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <script>
            new Tablesort(document.getElementById('operators'));
        </script>
      </div>
    </div>
  </div>
</div>

